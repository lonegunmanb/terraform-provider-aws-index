package github.com/hashicorp/terraform-provider-aws/internal/backoff
import (
	"context"
	"time"

	inttypes "github.com/hashicorp/terraform-provider-aws/internal/types"
)
func (r *Loop) Continue(ctx context.Context) bool {
	if r.attempt != 0 && r.Remaining() == 0 {
		// Any non-zero grace period allows one more attempt.
		if r.gracePeriod == 0 {
			return false
		}

		r.gracePeriod = 0
	}

	r.sleep(ctx, r.config.delay(r.attempt))
	r.attempt++

	return context.Cause(ctx) == nil
}
