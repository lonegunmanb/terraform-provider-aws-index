func flattenContentSourceConfiguration(apiObject *types.ContentSourceConfiguration) []any {
	if apiObject == nil {
		return nil
	}

	m := map[string]any{
		"direct_put_content": apiObject.DirectPutContent,
	}

	if v := apiObject.DataSourceIds; len(v) > 0 {
		m["data_source_ids"] = v
	}

	if v := apiObject.FaqIds; len(v) > 0 {
		m["faq_ids"] = v
	}
	return []any{m}
}
