func flattenTriggerNotificationProperty(property *awstypes.NotificationProperty) []map[string]any {
	if property == nil {
		return []map[string]any{}
	}

	m := map[string]any{
		"notify_delay_after": aws.ToInt32(property.NotifyDelayAfter),
	}

	return []map[string]any{m}
}
