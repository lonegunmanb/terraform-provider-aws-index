					Type:     schema.TypeString,
					Required: true,
					ForceNew: true,
				},
				"service_namespace": {
					Type:     schema.TypeString,
					Required: true,
					ForceNew: true,
				},
				"step_scaling_policy_configuration": {
					Type:     schema.TypeList,
					MaxItems: 1,
					Optional: true,
