func flattenField(apiObject awstypes.Field) map[string]any {
	tfMap := map[string]any{
		names.AttrType: apiObject.Type,
	}

	if v := apiObject.Name; v != nil {
		tfMap[names.AttrName] = aws.ToString(v)
	}

	return tfMap
}
