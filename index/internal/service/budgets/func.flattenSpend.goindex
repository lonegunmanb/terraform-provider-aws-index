func flattenSpend(apiObject *awstypes.Spend) []any {
	if apiObject == nil {
		return nil
	}

	attrs := map[string]any{
		"amount":       aws.ToString(apiObject.Amount),
		names.AttrUnit: aws.ToString(apiObject.Unit),
	}

	return []any{attrs}
}
