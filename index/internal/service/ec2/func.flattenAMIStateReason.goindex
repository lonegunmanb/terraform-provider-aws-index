func flattenAMIStateReason(m *awstypes.StateReason) map[string]any {
	s := make(map[string]any)
	if m != nil {
		s["code"] = aws.ToString(m.Code)
		s[names.AttrMessage] = aws.ToString(m.Message)
	} else {
		s["code"] = "UNSET"
		s[names.AttrMessage] = "UNSET"
	}
	return s
}
