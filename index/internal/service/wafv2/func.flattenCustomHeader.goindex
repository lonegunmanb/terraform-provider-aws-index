func flattenCustomHeader(h *awstypes.CustomHTTPHeader) map[string]any {
	if h == nil {
		return map[string]any{}
	}

	m := map[string]any{
		names.AttrName:  aws.ToString(h.Name),
		names.AttrValue: aws.ToString(h.Value),
	}

	return m
}
